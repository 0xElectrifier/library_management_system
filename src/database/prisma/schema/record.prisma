model Record {
    id              Int          @id
    status          RECORD_STATUS
    dateBorrowed    DateTime        @default(now())
    dateReturned    DateTime
    book            Book            @relation(fields: [bookId], references: [id])
    bookId          Int
    user            User            @relation(fields: [userId], references: [id])
    userId          Int
}

enum RECORD_STATUS {
    BORROWED
    RETURNED
}